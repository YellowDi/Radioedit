<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="Auras.lua"/>
	<Script file="FrameFunctions.lua"/>
	<Script file="Castbars.lua"/>
	<Script file="ClassModules.lua"/>
	<Script file="Tags.lua"/>

	<!-- mage arcane charges -->
	<Frame name="oUF_AbuArcaneOrbsTemplate" parentArray="AuraOrbs" virtual="true">
		<Size x="48" y="48"/>
 		<Animations>
			<AnimationGroup parentKey="AnimIn" setToFinalAlpha="true">
				<Alpha childKey="border" fromAlpha="0" toAlpha="1" duration="0.2" order="1"/>
				<Alpha childKey="fill" fromAlpha="0" toAlpha="1" duration="0.2" order="1"/>
				<Alpha childKey="glow" fromAlpha="0" toAlpha="1" duration="0.2" order="1"/>
				<Alpha childKey="glow" fromAlpha="1" toAlpha="0" duration="0.25" order="2"/>
 			</AnimationGroup>
			<AnimationGroup parentKey="AnimOut" setToFinalAlpha="true">
				<Alpha childKey="glow" fromAlpha="0" toAlpha="1" duration="0.2" order="1"/>
				<Alpha childKey="glow" fromAlpha="1" toAlpha="0" duration="0.25" order="2"/>
				<Alpha childKey="border" fromAlpha="1" toAlpha="0" duration="0.2" order="2"/>
				<Alpha childKey="fill" fromAlpha="1" toAlpha="0" duration="0.2" order="2"/>
 			</AnimationGroup>
 		</Animations>
 		<Layers>\
 			<Layer level="ARTWORK">
				<Texture file="Interface\AddOns\oUF_Abu\Media\Frames\Fill" parentKey="fill" alpha="0">
					<Size x="48" y="48"/>
 					<Anchors>
 						<Anchor point="CENTER"/>
 					</Anchors>
 					<Color r="1" g=".8" b=".8" a="1"/>
 				</Texture>
				<Texture file="Interface\AddOns\oUF_Abu\Media\Frames\Border" parentKey="border" alpha="0">
					<Size x="48" y="48"/>
 					<Anchors>
 						<Anchor point="CENTER"/>
 					</Anchors>
 				</Texture>
 			</Layer>
 			<Layer level="OVERLAY">
				<Texture file="Interface\AddOns\oUF_Abu\Media\Frames\Flash" parentKey="glow" alpha="0" alphaMode="ADD">
					<Size x="48" y="48"/>
 					<Anchors>
 						<Anchor point="CENTER"/>
 					</Anchors>
 				</Texture>
 			</Layer>
 		</Layers>
 	</Frame>
</Ui>